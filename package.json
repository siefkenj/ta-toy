{
    "private": true,
    "name": "ta-toy",
    "description": "Toy application to learn how to use Vue.js",
    "license": "MIT",
    "author": "Run Zhao Zeng <run.zeng@mail.utoronto.ca>",
    "version": "1.0.0",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "precommit": "lint-staged",
        "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
        "start": "webpack --watch",
        "test": "mocha-webpack test/* --recursive --require test/.setup"
    },
    "dependencies": {
        "vue": "^2.5.11",
        "vue-router": "^3.0.1"
    },
    "devDependencies": {
        "avoriaz": "^6.3.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-3": "^6.24.1",
        "chai": "^4.1.2",
        "copy-webpack-plugin": "^4.5.1",
        "cross-env": "^5.0.5",
        "css-loader": "^0.28.7",
        "es6-promise": "^4.2.4",
        "file-loader": "^1.1.4",
        "husky": "^0.14.3",
        "isomorphic-fetch": "^2.2.1",
        "jsdom": "^11.10.0",
        "jsdom-global": "^3.0.2",
        "lint-staged": "^7.1.1",
        "mocha": "^5.1.1",
        "mocha-webpack": "^1.1.0",
        "prettier": "^1.12.1",
        "prettier-package-json": "^1.6.0",
        "vue-loader": "^13.0.5",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.9.1"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "lint-staged": {
        "*.{js,vue}": [
            "prettier --write --tab-width 4",
            "git add"
        ],
        "*.json": [
            "prettier-package-json --write --tab-width 4",
            "git add"
        ]
    }
}
